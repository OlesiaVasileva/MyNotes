<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/empty_main_"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/empty_main_">

    <View
        android:id="@+id/image_empty_screen"
        android:layout_width="142dp"
        android:layout_height="101dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="239dp"
        android:background="@drawable/img_empty_screen" />

    <TextView
        android:id="@+id/text_empty_screen"
        android:layout_width="283dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="356dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="39dp"
        android:gravity="center|top"
        android:text="@string/content"
        android:textAppearance="@style/body_1" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_act_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/img_plus"
        app:tint="@color/white"
        android:backgroundTint="@color/accent"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>

